
    <script>
        function simpleAjax(url,div){
        	    $.ajax({url: url,
        	        	    beforeSend: function() {
    	        $("#"+div).html('<h1>LOADING</h1>');
        },
        	    success: function(result){
        $("#"+div).html(result);
   		 }});
};

 	$( document ).ready(function() { 
 	  //onload populating messages  
simpleAjax('/recieved','messages_main_container');
$( "#message_inbox" ).click(function() {
  simpleAjax('/recieved','messages_main_container');
});

$( "#message_sent" ).click(function() {
  simpleAjax('/sent','messages_main_container');
});

$( "#message_sending" ).click(function() {
  simpleAjax('/sendMessage_form','messages_main_container');
});

 	});
    </script>
